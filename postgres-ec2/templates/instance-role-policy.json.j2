{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::{{s3_deployment_bucket}}",
                "arn:aws:s3:::{{s3_kpf_bucket}}"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::{{s3_deployment_bucket}}/{{s3_deployment_root}}/*",
                "arn:aws:s3:::{{s3_kpf_bucket}}/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "ec2:AttachVolume",
                "ec2:DescribeVolumeAttribute",
                "ec2:DescribeVolumes",
                "ec2:DescribeVolumeStatus",
                "ec2:DetachVolume"
            ],
            "Resource": [
                "*"
            ]
        }
    ]
}
